@using Marketplace_3d_Assets.PresentationLayer.ViewModels
@model LoginViewModel
<div class="auth-form-container">
    <h2>Вход</h2>
    <form asp-action="Login" method="post">
        <p>
            <label asp-for="Login"></label>
            <input type="text" asp-for="Login" />
